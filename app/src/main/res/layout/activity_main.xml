<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridView1"
        android:numColumns="5"
        android:gravity="center"
        android:columnWidth="50dp"
        android:stretchMode="columnWidth"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    </GridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B"
        android:id="@+id/textView_B"
        android:textSize="40dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_above="@+id/gridView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:textColor="#FF0000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I"
        android:id="@+id/textView_I"
        android:layout_alignBottom="@+id/textView_B"
        android:layout_toRightOf="@+id/textView_B"
        android:layout_toEndOf="@+id/textView_B"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="40dp"
        android:textColor="#FFD119"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/textView_N"
        android:layout_alignBottom="@+id/textView_I"
        android:layout_toRightOf="@+id/textView_I"
        android:layout_toEndOf="@+id/textView_I"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="40dp"
        android:textColor="#2E8AE6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="G"
        android:id="@+id/textView_G"
        android:layout_alignBottom="@+id/textView_N"
        android:layout_toRightOf="@+id/textView_N"
        android:layout_toEndOf="@+id/textView_N"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="40dp"
        android:textColor="#009900"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O"
        android:id="@+id/textView_O"
        android:layout_alignBottom="@+id/textView_G"
        android:layout_toRightOf="@+id/textView_G"
        android:layout_toEndOf="@+id/textView_G"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="40dp"
        android:textColor="#FFD119"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WORD"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#6699FF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView_timer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score:  "
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView_timer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView_score"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose Alphabet"
        android:id="@+id/textView_Help"
        android:layout_below="@+id/gridView1"
        android:layout_toRightOf="@+id/textView_I"
        android:layout_toEndOf="@+id/textView_I"
        android:layout_marginTop="30dp" />

</RelativeLayout>
